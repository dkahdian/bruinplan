    {
      "id": "honors-program",
      "title": "Honors Program",
      "description": "Departmental honors are awarded at graduation to those students who have a grade-point average of 3.6 or better in their junior and senior years and who have received a grade of A in Linguistics 198A and 198B or in 199. Qualified students may be proposed by any member of the faculty to the faculty as a whole for the award of highest honors on the basis of a piece of research in linguistics completed at UCLA.",
      "requirements": [
        {
          "type": "group",
          "title": "Honors Program Requirements",
          "description": "Qualified students may complete the honors program by satisfying GPA requirements and completing one of the following research options. The honors program is optional.",
          "needs": 1,
          "options": [
            {
              "type": "group",
              "title": "Honors Research Tracks",
              "description": "Complete Linguistics 198A and 198B or 199 with a grade of A.",
              "needs": 1,
              "options": [
